<header class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <%= link_to "noompang", root_path, id: "logo" %>
      <nav>
        <ul class="nav pull-right navbar-fixed-top">
          <% if signed_in? %>
            <li><%= link_to "Home", root_path %></li>
            <li><%= link_to "Profile", current_user %></li>
            <% if has_new_notifications? %>
              <li><%= link_to "Notifications (#{new_notifications_count})", notifications_path %></li>
            <% else %>
              <li><%= link_to "Notifications", notifications_path %></li>
            <% end %>
            <li id="fat-menu" class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                More <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li style="padding:3px 15px;">Balance: <%= get_user_balance(current_user) %></li>
                <li class="divider"></li>
                <li><%= link_to "Settings", edit_user_path(current_user) %></li>
                <li><%= link_to "Help", help_path %></li>
                <li class="divider"></li>
                <li>
                  <%= link_to "Sign out", signout_path, method: "delete" %>
                </li>
              </ul>
            </li>
          <% else %>
            <li><%= link_to "Sign in", signin_path %></li>
          <% end %>
          <li><%= user_icon_for @user %></li>
        </ul>
      </nav>
    </div>
  </div>
</header>
