<% provide(:title, 'Profile') %>
<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <% if @user.first_name %>
          <%= 'Welcome back, ' + @user.first_name + '!' %>
        <% else %>
          Welcome back!
        <% end %>
      </h1>
    </section>
  </aside>
</div>
<div class="row">
  <div class="span12">
    <h2>My Requested Rides</h2>
  </div>
</div>
<div class="row">
  <div class="center span12">
    <%= link_to "Request a Ride", searchride_path, class: "btn btn-small btn-success" %>
  </div>
</div>
<div class="row">
  <div class="span12">
    <table class="table table-condensed">
      <thead>
        <tr>
            <td>
              Pickup Date
            </td>          
            <td>
              Pickup Time
            </td> 
            <td>
              Pickup Address
            </td>
            <td>
              Dropoff Address
            </td> 
        </tr>
      </thead>
      <tbody>
        <tr>
          <%= render @user.ride_requests %>
        </tr>
      </tbody>   
    </table>
  </div>
</div>
<div class="row">
  <div class="span12">
    <h2>My Offered Rides</h2>
  </div>
</div>
<div class="row">
  <div class="center span12">
    <%= link_to "Offer a Ride", newride_path, class: "btn btn-small btn-success" %>
  </div>
</div>
<div class="row">
  <div class="span12">
    <table class="table table-condensed">
      <thead>
        <tr>
            <td>
              Start Date
            </td>          
            <td>
              Start Time
            </td> 
            <td>
              Start Address
            </td>
            <td>
              End Address
            </td>
            <td>
              
            </td>
            <td>
              
            </td>
        </tr>
      </thead>
      <tbody>
        <%= render @user.rides %>
      </tbody>   
    </table>
  </div>
</div>
