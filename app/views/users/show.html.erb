<% provide(:title, @user.first_name + ' ' + @user.last_name) %>
<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <%= @user.first_name + ' ' + @user.last_name %>
      </h1>
    </section>
  </aside>
</div>
<div class="row">
  <div class="center span12">
    <%= link_to "Request a Ride", '#', class: "btn btn-small btn-success" %>
    <%= link_to "Offer a Ride", newride_path, class: "btn btn-small btn-success" %>
  </div>
</div>
<div class="row">
  <div class="span12">
    <h2>My Requested Rides</h2>
  </div>
</div>
<div class="row">
  <div class="span12">
    <table class="table table-condensed">
      <thead>
        <tr>
            <td>
              Pickup Date
            </td>          
            <td>
              Pickup Time
            </td> 
            <td>
              Pickup Address
            </td>
            <td>
              Pickup Address
            </td> 
        </tr>
      </thead>
      <tbody>
        <%= render @user.rides %>
      </tbody>   
    </table>
  </div>
</div>
<div class="row">
  <div class="span12">
    <h2>My Offered Rides</h2>
  </div>
</div>
<div class="row">
  <div class="span12">
    <table class="table table-condensed">
      <thead>
        <tr>
            <td>
              Start Date
            </td>          
            <td>
              Start Time
            </td> 
            <td>
              Start Address
            </td>
            <td>
              End Address
            </td> 
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>…</td>
          <td>…</td>
          <td>…</td>
          <td>…</td>
        </tr>
      </tbody>   
    </table>
  </div>
</div>
